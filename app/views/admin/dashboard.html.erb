<div class="container mt-3">
   <div class="row">
      <div class="col">
         <ul class="list-group">
            <li class="list-group-item bg-primary text-light">Users</li>
            <li class="list-group-item bg-secondary"><%= link_to "Create New User/Admin",  %></li>
            <% @users.each do |u| %>
            <li class="list-group-item"><%= link_to u.username, user_path(u.id) %></li>
            <% end %>
         </ul>
      </div>
      <div class="col">
         <ul class="list-group">
            <li class="list-group-item bg-primary text-light">Languages</li>
            <% @languages.each do |l| %>
            <li class="list-group-item"><%= link_to l.name.capitalize, language_path(l.id) %></li>
            <% end %>
         </ul>
      </div>
      <div class="col">
         <ul class="list-group">
            <li class="list-group-item bg-primary text-light">Nations</li>
            <% @nations.each do |n| %>
            <li class="list-group-item"><%= link_to n.name, flag_path(n.id) %></li>
            <% end %>
         </ul>
      </div>
   </div>
</div>