<%= form_tag('/admin/create_user') do %>
<div class="card-body">

   <% if @user.errors.any? %>
      <div class="invalid-feedback mb-3">
         <ul>
         <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
         </ul>
      </div>
   <% end %>

   <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
   </div>

   <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
   </div>

   <div class="form-group">
      <%= label_tag :password_confirmation %>
      <%= password_field_tag :password_confirmation %>
   </div>

   <div class="form-group">
      <%= label_tag :username %>
      <%= text_field_tag :username %>
   </div>

   <div class="form-group">
      <%= label_tag :first_name %>
      <%= text_field_tag :first_name %>
   </div>

   <div class="form-group">
      <%= label_tag :last_name %>
      <%= text_field_tag :last_name %>
   </div>

   <div class="form-group">
      <%= label_tag :age %>
      <%= number_field_tag :age %>
   </div>

   <div class="form-group">
      <%= label_tag :skype_username %>
      <%= text_field_tag :skype_username %>
   </div>

   <div class="form-group">
      <p>Please select the user's native language.</p>
      <select name="native_language_id">
            <option value="">Please select</option>
         <% @approved_languages.each do |language| %>
            <option value="<%= language.id %>"><%= language.name.capitalize %></option>
         <% end %>
      </select>
   </div>

   <div class="form-group">
      <p>Please select the language the user is learning.</p>
      <select name="foreign_language_id">
            <option value="">Please select</option>
         <% @approved_languages.each do |language| %>
            <option value="<%= language.id %>"><%= language.name.capitalize %></option>
         <% end %>
      </select>
   </div>

   <div class="form-group">
      <% if @user.profile_pic.attached? %>
         <%= image_tag @user.profile_pic %>
      <% end %>
   </div>

   <div class="form-group">
      <%= label_tag :profile_pic %>
      <%= file_field_tag :profile_pic %>
   </div>

   <div class="form-group">
      <p>Is this user an site administrator?</p>
      <select name="user[admin]" id="user_admin">
         <option value="">Please select</option>
         <option value="true">Yes</option>
         <option value="false">No</option>
      </select>
   </div>

   <div class="form-group">
      <%= submit_tag "Submit" %>
   </div>
</div>
<% end %>