<%= form_tag('/admin/new_user') do %>
<div class="card-body">

   <% if @user.errors.any? %>
      <div class="invalid-feedback mb-3">
         <ul>
         <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
         </ul>
      </div>
   <% end %>

   <div class="form-group">
      <%= label_tag "user[email]" %>
      <%= text_field_tag "user[email]" %>
   </div>

   <div class="form-group">
      <%= label_tag "user[password]" %>
      <%= password_field_tag "user[password]" %>
   </div>

   <div class="form-group">
      <%= label_tag "user[password_confirmation]" %>
      <%= password_field_tag "user[password_confirmation]" %>
   </div>

   <div class="form-group">
      <%= label_tag "user[username]" %>
      <%= text_field_tag "user[username]" %>
   </div>

   <div class="form-group">
      <%= label_tag "user[first_name]" %>
      <%= text_field_tag "user[first_name]" %>
   </div>

   <div class="form-group">
      <%= label_tag "user[last_name]" %>
      <%= text_field_tag "user[last_name]" %>
   </div>

   <div class="form-group">
      <%= label_tag "user[age]" %>
      <%= number_field_tag "user[age]" %>
   </div>

   <div class="form-group">
      <%= label_tag "user[skype_username]" %>
      <%= text_field_tag "user[skype_username]" %>
   </div>

   <div class="form-group">
      <p>Please select the user's native language.</p>
      <select name="native_language_id">
            <option value="">Please select</option>
         <% @approved_languages.each do |language| %>
            <option value="<%= language.id %>"><%= language.name.capitalize %></option>
         <% end %>
      </select>
   </div>

   <div class="form-group">
      <p>Please select the language the user is learning.</p>
      <select name="foreign_language_id">
            <option value="">Please select</option>
         <% @approved_languages.each do |language| %>
            <option value="<%= language.id %>"><%= language.name.capitalize %></option>
         <% end %>
      </select>
   </div>

   <div class="form-group">
      <% if @user.profile_pic.attached? %>
         <%= image_tag @user.profile_pic %>
      <% end %>
   </div>

   <div class="form-group">
      <%= label_tag "user[profile_pic]" %>
      <%= file_field_tag "user[profile_pic]" %>
   </div>

   <div class="form-group">
      <p>Is this user an site administrator?</p>
      <select name="user[admin]" id="user_admin">
         <option value="">Please select</option>
         <option value="true">Yes</option>
         <option value="false">No</option>
      </select>
   </div>

   <div class="form-group">
      <%= submit_tag "Submit" %>
   </div>
</div>
<% end %>