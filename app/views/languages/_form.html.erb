<%= form_for @language, :html => {class: 'card'} do |f| %>
<div class="card-body">
   <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
   </div>

   <div class="form-group">
      <p>Is this a tonal language?</p>
      <select name="language[pitched]" id="pitched">
         <option value="">Please select</option>
         <option value="true">Yes</option>
         <option value="false">No</option>
      </select>
   </div>

   <div class="form-group">
      <p>Is this a language with grammatical gender?</p>
      <select name="language[gendered]" id="gendered">
         <option value="">Please select</option>
         <option value="true">Yes</option>
         <option value="false">No</option>
      </select>
   </div>

   <div class="form-group">
      <%= f.label :wikipedia_link %>
      <%= f.text_field :wikipedia_link %>
   </div>

   <div class="form-group">
      <%= f.label :profile_pic %>
      <%= f.file_field :profile_pic %>
   </div>

   <div class="form-group">
      <%= f.submit "Submit" %>
   </div>
</div>
<% end %>