<div class="container">
<%= form_for @user, :html => {:class => 'form-signin text-center'}, url: '/signin', method: 'POST' do |f| %>
   <%= image_tag("LinguaFrancaLogoBlue.png", class: 'mb-4', width: '72px') %>

   <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
   <%= f.label :email, for: 'inputEmail', class: 'sr-only' %>
   <%= f.text_field :email, id: 'inputEmail', class: 'form-control', placeholder: 'Email address' %>

   <%= f.label :password, for: 'inputPassword', class: 'sr-only' %>
   <% if @signin_failure %>
      <%= f.password_field :password, id: 'inputPassword', class: 'form-control is-invalid', placeholder: 'Password' %>
   <% else %>
      <%= f.password_field :password, id: 'inputPassword', class: 'form-control', placeholder: 'Password' %>
   <% end %>

   <% if @signin_failure %>
   <div class="invalid-feedback mb-3">
      Your email and/or password did not match our records. Please try again.
   </div>
   <% end %>

   <%= f.submit "Login", class: 'btn btn-lg btn-primary btn-block' %>

   <%= link_to image_tag("GitHub-Mark-120px-plus.png", width: '30px'), '/auth/github', class: 'btn btn-lg btn-outline-primary btn-white btn-block' %>

   <div class="mt-3 text-center">
   <%= link_to "Back", root_path %>
   </div>

   <p class="mt-5 mb-3 text-muted text-center">Â© 2021</p>
<% end %>
</div>